<p id="notice"><%= notice %></p>

<h1>Funcionarios</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">CPF</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.id %></td>
        <td><%= funcionario.nome %></td>
        <td><%= funcionario.cpf %></td>
        <td>
          <%= link_to 'Mostrar', funcionario %>
          <%= link_to 'Editar', edit_funcionario_path(funcionario) %>
          <%= link_to 'Deletar', funcionario, method: :delete, data: { confirm: 'Você tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

